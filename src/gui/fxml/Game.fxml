<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" stylesheets="@../css/Button.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.ControllerGame">
   <children>
      <StackPane fx:id="background" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox fx:id="gamefield">
               <children>
                  <VBox minHeight="-Infinity" minWidth="-Infinity" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="TOP_CENTER" minHeight="-Infinity">
                           <children>
                              <Label fx:id="turnLabel" alignment="CENTER" contentDisplay="CENTER" text="Your Turn">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                           <children>
                              <VBox fx:id="myBoard" alignment="CENTER" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                                 <children>
                                    <HBox alignment="CENTER">
                                       <children>
                                          <Label fx:id="selfLabel" text="Your Board">
                                             <font>
                                                <Font size="24.0" />
                                             </font>
                                          </Label>
                                       </children>
                                       <VBox.margin>
                                          <Insets bottom="20.0" />
                                       </VBox.margin>
                                    </HBox>
                                 </children>
                              </VBox>
                              <VBox fx:id="enemyBoard" alignment="CENTER" HBox.hgrow="ALWAYS">
                                 <children>
                                    <HBox alignment="CENTER">
                                       <children>
                                          <Label fx:id="enemyLabel" text="Enemy Board">
                                             <font>
                                                <Font size="24.0" />
                                             </font>
                                          </Label>
                                       </children>
                                       <VBox.margin>
                                          <Insets bottom="20.0" />
                                       </VBox.margin>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox fx:id="menuBar" alignment="TOP_RIGHT" maxWidth="-Infinity" prefWidth="200.0" spacing="40.0" HBox.hgrow="ALWAYS">
                     <children>
                        <MenuButton minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" text="Options">
                           <font>
                              <Font name="Rockwell" size="18.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </MenuButton>
                        <Button mnemonicParsing="false" onAction="#onSurrender" prefHeight="40.0" prefWidth="150.0" text="Surrender">
                           <font>
                              <Font name="Rockwell" size="18.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox fx:id="gameEnd" alignment="CENTER" spacing="40.0" visible="false">
               <children>
                  <Label text="Gewonnen oder Verloren!">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" spacing="100.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onPlayAgain" prefHeight="60.0" prefWidth="250.0" text="Play again!">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onSwitchToMenu" prefHeight="60.0" prefWidth="250.0" text="Switch to Menu">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <StackPane.margin>
                  <Insets bottom="200.0" left="250.0" right="250.0" top="200.0" />
               </StackPane.margin>
            </VBox>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </StackPane>
   </children>
</AnchorPane>
